# =============================================================================
# Grafana Web Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# REQUIRED: OpenAI API Configuration
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# REQUIRED: Grafana Configuration
# =============================================================================
# Your Grafana instance URL (no trailing slash)
GRAFANA_URL=https://your-grafana-instance.com
GRAFANA_PUBLIC_URL=https://your-grafana-instance.com

# Grafana API Token (Service Account token recommended)
# Create at: Grafana -> Administration -> Service Accounts
# Required scopes: Dashboards:Read, Datasources:Read, Folders:Read
GRAFANA_TOKEN=glsa_...

# =============================================================================
# OPTIONAL: Agent Configuration
# =============================================================================
# OpenAI model to use (default: gpt-4o)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o

# CORS origins (comma-separated, default: http://localhost:3000)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Cache configuration
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=300

# Alert analysis storage
KB_DIR=./kb
ALERT_ANALYSIS_DIR=./alert-analyses

# =============================================================================
# REQUIRED: Service URLs
# =============================================================================
# MCP Server URL (running on separate machine)
# Example: http://monitoring-server.local:8888/mcp or http://192.168.1.100:8888/mcp
MCP_SERVER_URL=http://your-mcp-server:8888/mcp

# Optional: Additional MCP servers (comma-separated)
# Example: http://prometheus-mcp:7001/mcp,http://ssh-mcp:7002/mcp
MCP_SERVER_URLS=
# Optional: Labels for MCP servers (comma-separated, same order as URLs)
MCP_SERVER_NAMES=

# MCP command execution controls
MCP_EXECUTION_MODE=suggest
MCP_COMMAND_ALLOWLIST=ping,curl,nmap,snmpwalk,sshprobe
MCP_AUDIT_DIR=./mcp-audit

# =============================================================================
# OPTIONAL: Docker Compose Profiles
# =============================================================================
# Uncomment to enable optional services:
# - testing: Includes test Grafana instance
# - monitoring: Includes Prometheus and Loki

# COMPOSE_PROFILES=testing,monitoring
